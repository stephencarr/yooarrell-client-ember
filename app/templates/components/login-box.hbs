<main class="login-box wrapper u-center-block">
  <div class="u-center-block__content">
    <h1 class="c-heading">Please Login</h1>
    <form {{action 'authenticate' on='submit'}}>
      <div class="o-form-element">
          <div class="c-input-group c-input-group--stacked">
              <div class="o-field o-field--icon-left o-field--icon-right">
                <i class="fa fa-fw fa-user c-icon"></i>
                  {{input type="email" id='identification' class='c-field' placeholder='Enter Login' value=identification}}
              </div>
              <div class="o-field o-field--icon-left o-field--icon-right">
                <i class="fa fa-fw fa-lock c-icon"></i>
                  {{input id='password' class='c-field' placeholder='Enter Password' type='password' value=password}}
              </div>
          </div>
      </div>
      <div class="o-form-element">
          <button class="c-button c-button--brand c-button--block" type="submit">Login</button>
      </div>
      <p class="c-paragraph u-centered">
        {{#link-to 'signup' class='c-link c-link--info'}}Sign up for an account{{/link-to}}
      </p>
      {{#if errorMessage}}
        <div local-class="errors">
          <div class="u-centered u-color-error">{{errorMessage}}</div>
        </div>
      {{/if}}
    </form>
  </div>
</main>
